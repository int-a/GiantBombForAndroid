<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.int_a.giantbombforandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:name="com.app.int_a.giantbombforandroid.main.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.app.int_a.giantbombforandroid.main.mainscreen.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.int_a.giantbombforandroid.main.mainscreen.VideoActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.FullScreenTheme" >
        </activity>
        <activity
            android:name="com.app.int_a.giantbombforandroid.main.SettingsActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>